<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Money Monsters Learn</title>
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body> 
<div class="singleLearn">
  <div class="container">
    <header class="learn-each-header">
      <%- include('../partials/header') %>
    </header>

    <main>
      <article>
        <h5><%= blog.category %></h5>
        <h1><%= blog.title %></h1>
        <%- blog.content.split('\n\n').map(paragraph => `<p>${paragraph}</p>`).join('') %>
      </article>

      <!-- <p>Status:
        <span id="status-<%= blog._id %>" class="status-badge <%= hasSubmitted ? 'complete' : 'todo' %>">
          <%= hasSubmitted ? 'Complete' : 'To Do' %>
        </span>
      </p> -->

<button onclick="completeAndRedirect('<%= blog._id %>')">Mark as Complete</button>

      <!-- works at bottom need to figure out how to use button above to open popup-->
        <%- include('./whatLearned') %>
    </main>

    <footer>
      <%- include('../partials/bottomNav') %>
    </footer>
    
<script>
  async function completeAndRedirect(blogId) {
    try {
      const res = await fetch(`/progress/${blogId}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ status: "Complete" })
      });

      if (res.ok) {
        window.location.href = "/learn";
      } else {
        alert("Something went wrong marking this complete.");
      }
    } catch (err) {
      console.error("‚ùå Failed to complete article:", err);
    }
  }
</script>
  </div>
</div>
</body>
</html>
