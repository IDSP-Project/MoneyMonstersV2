<div class="headerbar">
  <header class="main-header">
    <div class="header-left">
      <div class="logo-wrapper" onclick="window.location.href='/dashboard';" style="cursor: pointer;">
        <%- include('../logo') %>
      </div>
      <h1 class="brand-name">Money Monsters</h1>
    </div>

    <button class="icon-button hamburger-toggle" onclick="toggleMenu()">
      <i class="fas fa-bars" id="hamburgerIcon" style="display: inline;"></i>
      <i class="fas fa-times" id="closeIcon" style="display: none;"></i>
    </button>
  </header>

  <!-- This dropdown is BELOW the header, but independent -->
  <nav class="dropdown-menu hidden" id="hamburgerMenu">
    <ul class="menu-items">
      <li><a href="#">Notifications</a></li>
      <li><a href="/profile/<%= user.id %>">Account Settings</a></li>
      <li><a href="/logout/<%= user.id %>">Log Out</a></li>
    </ul>
  </nav>

  <script>
    function toggleMenu() {
      const menu = document.getElementById('hamburgerMenu');
      const bars = document.getElementById('hamburgerIcon');
      const close = document.getElementById('closeIcon');
      const isOpen = !menu.classList.contains('hidden');

      if (isOpen) {
        menu.classList.add('hidden');
        bars.style.display = 'inline';
        close.style.display = 'none';
      } else {
        menu.classList.remove('hidden');
        bars.style.display = 'none';
        close.style.display = 'inline';
      }
    }
  </script>
</div>