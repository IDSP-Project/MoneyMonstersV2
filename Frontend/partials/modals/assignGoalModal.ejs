<div id="assignGoalModal" class="modal">
  <div class="modalContent">
    <div class="modalHeader">
      <h2>Assign to a Goal</h2>
      <span class="modalClose">&times;</span>
    </div>
    <div class="modalBody">
      <% if (activeGoals && activeGoals.length > 0) { %>
        <form id="assignGoalForm">
          <% activeGoals.forEach(function(goal) { %>
            <label class="goalRadio">
              <input type="radio" name="goalId" value="<%= goal._id %>" />
              <span><%= goal.title %></span>
            </label>
          <% }); %>
          <div class="modalFooter">
            <button type="submit" class="confirmBtn">Assign</button>
            <button type="button" class="cancelBtn" id="cancelAssignGoalModal">Cancel</button>
          </div>
        </form>
      <% } else { %>
        <div class="noGoalsMessage">
          <i class="fas fa-bullseye"></i>
          <p>No active goals to assign.</p>
        </div>
        <div class="modalFooter">
          <button type="button" class="cancelBtn" id="cancelAssignGoalModal">Close</button>
        </div>
      <% } %>
    </div>
  </div>
</div>