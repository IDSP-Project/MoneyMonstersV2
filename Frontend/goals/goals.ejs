<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Money Monsters - Goals</title>
  <link rel="stylesheet" href="/style.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body data-child-id="<%= user.id %>">
  <div class="container">
    <header>
      <%- include('../partials/header') %>
      <% if (locals.viewingAsChild && locals.viewingChildName) { %>
        <%- include('../partials/viewingAsChild') %>
      <% } %>
    </header>
    <div class="goalPage">
      <div class="goalsContainer">
        <% if (goals && goals.length > 0) { %>
          <div class="sectionTabs">
            <h2>Goals</h2>
            <h2>Progress</h2>
          </div>
          <div class="goalList">
            <% goals.forEach(function(goal) { %>
              <a href="/goals/view/<%= goal._id %>" class="goalCardLink">
                <div class="goalCard">
                  <div class="goalInfo">
                    <% if (goal.purchaseLink) { %>
                      <img src="/images/goal.png" alt="Goal Image" class="goalImage" />
                    <% } else { %>
                      <div class="initialsAvatar"><%= getInitials(goal.title) %></div>
                    <% } %>
                    <div class="goalText">
                      <h3><%= goal.title %></h3>
                      <p><%= goal.purchaseLink ? new URL(goal.purchaseLink).hostname : 'Custom Goal' %></p>
                    </div>
                  </div>
                  <div class="goalProgress">
                    <div class="progressBar">
                      <div class="progressFill" data-progress="<%= goal.progress || 0 %>" style="--progress-width: <%= goal.progress || 0 %>%"></div>
                    </div>
                    <span><%= Math.round(goal.progress || 0) %>%</span>
                  </div>
                </div>
              </a>
            <% }); %>
          </div>
        <% } else { %>
          <div class="noGoalsMessage">
            <i class="fas fa-bullseye"></i>
            <h2>No Goals Yet</h2>
            <p>You haven't set any goals yet. Start by adding your first goal!</p>
          </div>
        <% } %>
      </div>

      <% if (user.accountType === 'child') { %>
        <div class="addGoalBtnContainer">
          <button class="btn" data-modal-target="addGoalModal">Add a New Goal</button>
        </div>
      <% } %>
    </div>

    <footer>
      <%- include('../partials/bottomNav') %>
    </footer>

    <%- include('../partials/modals/addGoalModal') %>
    <%- include('../partials/modals/assignGoalModal') %>
    <%- include('../partials/modals/assignTaskModal') %>
    <%- include('../partials/modals/confirmReassignModal') %>
  </div>
  
  <script src="/dynamic/modalPopUp.js"></script>
</body>
</html>